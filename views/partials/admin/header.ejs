<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin | Zyra</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f7f7f7;
      font-family: "Poppins", sans-serif;
    }

    /* Header */
    .main-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 1rem;
      height: 80px;
      background-color: #f5f5f5;
      border-bottom: 1px solid #e5e5e5;
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .main-header h1 {
      font-weight: bold;
      font-size: 2rem;
      color: #823d2b;
      margin: 0;
      text-align: center;
      flex-grow: 1;
    }

    /* ---------- NEW ADMIN SIDEBAR STYLE ---------- */
    .admin-sidebar {
      background: #fff;
      border-radius: 15px;
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
      padding: 20px 0;
      height: 100%;
      margin-top: 20px;
    }

    .admin-sidebar a {
      color: #000;
      text-decoration: none;
      display: flex;
      align-items: center;
      padding: 12px 25px;
      border-left: 4px solid transparent;
      transition: all 0.3s ease;
      font-size: 15px;
      margin-bottom: 4px;
    }

    .admin-sidebar a:hover,
    .admin-sidebar a.active {
      background-color: #f9ebe3;
      border-left: 4px solid #7a1f1f;
      color: #7a1f1f;
      font-weight: 500;
    }

    .admin-sidebar i {
      margin-right: 10px;
      font-size: 17px;
    }
    .zyra-title{
      color: #7a1f1f !important;
      font-family: 'Times New Roman', Times, serif;
      
    }
  </style>
</head>

<body>

<!-- Header -->
<div class="main-header">
  <button class="btn btn-outline-secondary d-md-none me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar">
    <i class="bi bi-list"></i>
  </button>

  <h1 class="text-center zyra-title flex-grow-1 ">ZYRA</h1>

  <div class="dropdown ms-2">
  <a class="dropdown-toggle d-flex align-items-center" href="#" 
     role="button" id="profileDropdown" data-bs-toggle="dropdown">
    <i class="fas fa-user-circle fa-lg me-2"></i> Admin
  </a>

  <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
    <li><a class="dropdown-item" href="#">Profile</a></li>
    <li><a class="dropdown-item" href="/admin/adminlogout">Logout</a></li>
  </ul>
</div>
</div>

<!-- Mobile Sidebar -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="mobileSidebar">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title">Menu</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
  </div>
  <div class="offcanvas-body">
    <div class="admin-sidebar">
      <a href="/admin/dashboard"><i class="bi bi-grid"></i> Dashboard</a>
      <a href="/admin/customers"><i class="bi bi-people"></i> Customer</a>
      <a href="/admin/categories"><i class="bi bi-tags"></i> Category</a>
      <a href="/admin/brands"><i class="bi bi-image"></i> Brands</a>
      <a href="/admin/orders"><i class="bi bi-bag"></i> Orders</a>
      <a href="/admin/products"><i class="bi bi-box-seam"></i> Products</a>
      <a href="/admin/salesReport"><i class="bi bi-graph-up"></i> Sales report</a>
      <a href="/admin/coupons"><i class="bi bi-ticket-perforated"></i> Coupon</a>
      <a href="/admin/offerManagement"><i class="bi bi-arrow-repeat"></i> Offer Management</a>
      
      <a href="/admin/adminlogout"><i class="bi bi-image"></i> Logout</a>
    </div>
  </div>
</div>

<!-- Main Layout -->
<div class="container-fluid">
  <div class="row">
    <!-- Desktop Sidebar -->
    <nav class="col-md-2 d-none d-md-block">
      <div class="admin-sidebar">
        <a href="/admin/dashboard"><i class="bi bi-grid"></i> Dashboard</a>
        <a href="/admin/customers"><i class="bi bi-people"></i> Customer</a>
        <a href="/admin/categories"><i class="bi bi-tags"></i> Category</a>
        <a href="/admin/brands"><i class="bi bi-image"></i> Brands</a>
        <a href="/admin/orders"><i class="bi bi-bag"></i> Orders</a>
        <a href="/admin/products"><i class="bi bi-box-seam"></i> Products</a>
        <a href="/admin/salesReport"><i class="bi bi-graph-up"></i> Sales report</a>
        <a href="/admin/coupons"><i class="bi bi-ticket-perforated"></i> Coupon</a>
        <a href="/admin/offerManagement"><i class="bi bi-arrow-repeat"></i> Offer Management</a>
      
        <a href="/admin/adminlogout"><i class="bi bi-image"></i> Logout</a>
      </div>
    </nav>



    <script>
  const path = window.location.pathname;

  document.querySelectorAll(".admin-sidebar a").forEach(link => {
    if (link.getAttribute("href") === path) {
      link.classList.add("active");
    }
  });
</script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>