            </div>
          </div>
          <div class="text-center mt-4"> <a href="edit-profile.html" class="btn btn-edit"><i
                class="bi bi-pencil me-2"></i>Edit Profile</a> </div>
        </div>

        <!-- View Address Section -->
        <div id="viewAddress" class="profile-card section d-none">
          <div class="address-header">
            <h4 class="fw-semibold">My Address</h4>
            <button class="btn-add-address">Add new Address</button>
          </div>

          <div class="address-card">
            <div class="address-details">
              <div class="address-name">ASWATHI</div>
