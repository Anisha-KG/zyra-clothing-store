<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Zyra - My Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: #f5eee9 !important;
      font-family: 'Poppins', sans-serif;
      font-size: 14px;
    }

    .order-box {
      background: #fff;
      padding: 25px;
      border-radius: 12px;
      border: 1px solid #e5e5e5;
      box-shadow: 0 2px 6px rgba(0,0,0,0.08);
      margin-bottom: 35px;
    }

    .order-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 18px;
      padding-bottom: 10px;
      border-bottom: 1px solid #f0f0f0;
    }

    .order-item {
      display: flex;
      gap: 20px;
      padding: 18px 0;
      border-bottom: 1px solid #f0f0f0;
    }

    .product-img {
      width: 110px;
      height: 110px;
      object-fit: contain;
      border-radius: 10px;
      border: 1px solid #ddd;
      background: #fff;
    }

    #productDetailsPage {
      background: #fff;
      min-height: 100vh;
      padding: 40px;
      width: 100% !important;
      max-width: 100% !important;
    }

    .tracking-list li {
      margin-bottom: 12px;
      padding-left: 12px;
      border-left: 3px solid #0d6efd;
      font-weight: 500;
    }

    .details-box {
      background: #fff;
      padding: 25px;
      border-radius: 12px;
      border: 1px solid #e5e5e5;
      box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    }

    /* Orders Page Layout With Sidebar */
    #ordersPage .container .row {
      display: flex;
    }

    #ordersSidebar {
      width: 260px;
      margin-right: 20px;
    }

    #ordersContent {
      flex-grow: 1;
    }

    .tracking-column {
      border-right: 1px solid #ddd;
      min-height: 100%;
      height: 100%;
      padding-right: 15px;
    }
  </style>
</head>
<body>

<div id="ordersPage">
  <div class="container py-5">
    <div class="row">

      <div class="col-md-3 mb-4" id="ordersSidebar">
        <!-- Sidebar Include -->
        <%- include("../../views/partials/user/userProfile-sidebar") %>
      </div>

      <div class="col-lg-9" id="ordersContent">
        <h3 class="fw-bold mb-4">My Orders</h3>

        <div class="order-box">
          <div class="order-header">
            <div>Order ID: <span class="text-muted">#SportsHub-2025-0251</span></div>
            <a href="#">View Order Details</a>
          </div>

          <div class="order-item">
            <img src="/mnt/data/9ac10292-6634-46a0-bfa6-0369d28084e4.jpg" class="product-img">

            <div class="flex-grow-1">
              <div class="item-title fw-bold">Li Ning G Force Sk Superlite Badminton Racket</div>
              <small class="d-block">Quantity: 3</small>
              <small class="d-block">Brand: Li-Ning</small>
              <small class="d-block">Color: <b>Red</b></small>
              <small class="d-block">Size: 20 Inch</small>
            </div>

            <div class="text-end">
              <div class="price mb-1">₹ 2500.00</div>
              <div class="order-date mb-1">Item Ordered By Thu 21 August 2025</div>
              <div class="status-text mb-2 text-success fw-bold">Your Order Has Been Placed</div>

              <button class="btn btn-outline-danger btn-sm">Cancel Item</button>
              <button class="btn btn-primary btn-sm mt-2"
                onclick="showDetails('Li Ning G Force Sk Superlite Badminton Racket','/mnt/data/9ac10292-6634-46a0-bfa6-0369d28084e4.jpg')">
                Track Order
              </button>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<!-- PRODUCT DETAILS FULL PAGE -->
<div id="productDetailsPage" style="display:none;">
  <button class="btn btn-dark mb-3" onclick="goBack()">← Back to Orders</button>

  <div class="details-box">
    <div class="row">

      <div class="col-md-3 tracking-column">
        <h6 class="fw-bold mb-3">Tracking</h6>
        <ul class="tracking-list" style="list-style:none; padding-left:0;">
          <li>Processing</li>
          <li>Packed</li>
          <li>Shipped</li>
          <li>Delivered</li>
          <li>Return Requested</li>
          <li>Returned</li>
          <li>Cancellation Requested</li>
          <li>Cancelled</li>
        </ul>
      </div>

      <div class="col-md-9">
        <div class="d-flex align-items-start gap-3">
          <img id="detailImage" src="" width="130" height="130" style="object-fit:contain; border:1px solid #ddd; border-radius:10px;">

          <div>
            <h5 id="detailTitle" class="fw-bold"></h5>
            <p><b>Payment Method:</b> COD</p>
            <p><b>Order No:</b> #Sample-Order-9981</p>
            <p class="text-danger fw-bold">REFUNDED</p>
          </div>
        </div>

        <hr>

        <h6 class="fw-bold">Delivery Address</h6>
        <div class="p-3 bg-light border rounded">
          <p class="mb-1">Anisha K</p>
          <p class="mb-1">Thrissur, Kerala - 680302</p>
          <p class="mb-0">Phone: 7736839194</p>
        </div>

        <hr>

        <h6 class="fw-bold">Order Items • 1 product</h6>
        <div class="d-flex gap-3 p-3 bg-light border rounded">
          <img id="detailImage2" src="" width="60" height="60" style="object-fit:contain;">
          <div>
            <p id="detailTitle2" class="fw-bold mb-0"></p>
            <small>Size: XL | Color: Black</small><br>
            <small>Qty: 1</small>
          </div>
          <div class="ms-auto fw-bold">₹1199</div>
        </div>

        <hr>

        <h6 class="fw-bold mb-3">Price Summary</h6>
        <div class="row mb-1">
          <div class="col">Total MRP</div>
          <div class="col text-end">₹2999</div>
        </div>

        <div class="row mb-1 text-success fw-bold">
          <div class="col">Applicable Discount</div>
          <div class="col text-end">- ₹1800</div>
        </div>

        <div class="row mb-1">
          <div class="col">Subtotal</div>
          <div class="col text-end">₹1199</div>
        </div>

        <div class="row mb-1">
          <div class="col">Total Tax</div>
          <div class="col text-end">₹216</div>
        </div>

        <hr>

        <div class="row fw-bold fs-5">
          <div class="col">Total Payable</div>
          <div class="col text-end">₹1415</div>
        </div>
      </div>

    </div>
  </div>
</div>

<script>
  function showDetails(title, img) {
    document.getElementById("ordersPage").style.display = "none";
    document.getElementById("productDetailsPage").style.display = "block";

    document.getElementById("detailTitle").innerText = title;
    document.getElementById("detailTitle2").innerText = title;
    document.getElementById("detailImage").src = img;
    document.getElementById("detailImage2").src = img;
  }

  function goBack() {
    document.getElementById("productDetailsPage").style.display = "none";
    document.getElementById("ordersPage").style.display = "block";
  }
</script>

</body>
</html>