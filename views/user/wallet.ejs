<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Zyra - My Wallet</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

  <style>
    body {
      background-color: #f9ebe3;
      font-family: "Poppins", sans-serif;
    }

    .row.align-top {
      align-items: flex-start;
    }

    .col-sidebar,
    .col-main {
      display: flex;
      flex-direction: column;
      align-self: flex-start;
    }

    .profile-sidebar>* {
      margin-top: 0 !important;
    }

    .wallet-card {
      background: #fff;
      border-radius: 15px;
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
      padding: 40px;
    }

    .profile-sidebar .card {
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
    }

    .transaction-card {
      background: #fff;
      border-radius: 10px;
      padding: 18px 20px;
      margin-bottom: 12px;
      border: 1px solid #eee;
      transition: 0.2s ease;
      font-size: 0.9rem; /* Smaller text except headers */
    }

    .transaction-card:hover {
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
    }

    .amount-credit {
      color: #1aa21a;
      font-weight: 600;
    }

    .amount-debit {
      color: #e63946;
      font-weight: 600;
    }

    .breadcrumb {
      background: transparent;
      padding-left: 0;
      margin-bottom: 0.5rem;
      font-size: 0.9rem;
    }

    .breadcrumb-item,
    .breadcrumb-item a {
      color: #888;
    }

    .breadcrumb-item.active {
      color: #555;
    }

    .wallet-card small,
    .wallet-card input,
    .wallet-card select,
    .wallet-card button,
    .wallet-card p,
    .wallet-card div,
    .wallet-card span {
      font-size: 0.9rem; /* Make everything slightly smaller except big titles */
    }

    h4.fw-bold,
    h5.fw-normal {
      font-size: 1.4rem !important; /* Keep Wallet and Transaction History big */
    }

    .pagination .page-item.active .page-link {
  background-color: #912f2f !important;  /* Brown */
  border-color: #912f2f !important;
  color: #fff !important;
}

.pagination .page-link {
  color: #912f2f;  /* Brown text for inactive pages */
}

.pagination .page-link:hover {
  color: #912f2f; /* Darker brown on hover */
}

    @media (max-width: 767px) {
      .wallet-card {
        padding: 20px;
      }

      .profile-sidebar .card {
        padding: 16px;
      }
    }
  </style>
</head>

<body>

  <%- include("../../views/partials/user/header") %>

  <nav aria-label="breadcrumb" class="container mt-3 mb-2">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#">Home</a></li>
      <li class="breadcrumb-item"><a href="#">Profile</a></li>
      <li class="breadcrumb-item active" aria-current="page">My Wallet</li>
    </ol>
  </nav>

  <div class="container pb-5">
    <div class="row align-top">

      <div class="col-md-3 mb-4 col-sidebar">
        <div class="profile-sidebar">
          <%- include("../../views/partials/user/userProfile-sidebar") %>
        </div>
      </div>

      <div class="col-md-9 mb-4 col-main">
        <div class="wallet-card">

          <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
              <h4 class="fw-bold m-0">Wallet</h4>
              <small>Last updated: 29 November 2025</small>
            </div>

            <div class="d-flex align-items-start">
              <div class="me-2" style="flex-shrink:0;">
                <input type="number" id="amount" class="form-control" placeholder="Enter amount" style="max-width:150px;">
                <small id="amount-Error" class="text-danger"></small>
              </div>

              <div>
                <button class="btn btn-dark rounded-pill px-4" onclick="startWalletRecharge()">Add Money</button>
              </div>
            </div>
          </div>

          <div class="p-3 mb-4" style="background:#f8f8f8;border-radius:10px;">
            <p class="text-muted m-0">Available Balance</p>
            <h3 class="fw-bold m-0">₹ <%= wallet ? wallet.balance : 0 %></h3>
          </div>

          <form method="GET" class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="fw-normal m-0">Transaction History</h5>

            <div class="d-flex">

              <input type="text" name="search" id="searchInput" class="form-control me-2"
                placeholder="Search..." value="<%= typeof search !== 'undefined' ? search : '' %>"
                style="max-width:200px;" />

              <% if (search && search.trim() !== '') { %>
                <button type="button" class="btn btn-outline-secondary me-2" onclick="clearSearch()">Clear</button>
              <% } %>

              <select name="filter" id="filterType" class="form-select" style="max-width:150px;">
                <option value="all" <%= filterType === 'all' ? 'selected' : '' %>>All</option>
                <option value="credit" <%= filterType === 'credit' ? 'selected' : '' %>>Credited</option>
                <option value="debit" <%= filterType === 'debit' ? 'selected' : '' %>>Debited</option>
              </select>

            </div>
          </form>

          <div id="transactionList">
            <% if (!transactions || transactions.length === 0) { %>
              <p class="text-muted text-center">No transactions found.</p>
            <% } else { %>

              <% transactions.forEach(t => { %>
                <div class="transaction-card">
                  <div class="fw-normal"><%= t.description || '—' %></div>
                  <small class="text-muted d-block mb-1">
  <%= new Date(t.date).toLocaleDateString('en-US', {
        day: '2-digit',
        month: 'short',
        year: 'numeric'
     }) %>
</small>

                  <div class="d-flex justify-content-between">
                    <div></div>

                    <% if (String(t.type).toLowerCase() === 'credit') { %>
                      <div class="amount-credit">+ ₹<%= t.amount %></div>
                    <% } else { %>
                      <div class="amount-debit">- ₹<%= t.amount %></div>
                    <% } %>
                  </div>
                </div>
              <% }) %>

            <% } %>
          </div>

          <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
            <nav>
              <ul class="pagination justify-content-center">

                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                  <button class="page-link" onclick="loadWalletData(<%= currentPage - 1 %>)">Previous</button>
                </li>

                <% for (let i = 1; i <= totalPages; i++) { %>
                  <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                    <button class="page-link" onclick="loadWalletData(<%= i %>)"><%= i %></button>
                  </li>
                <% } %>

                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                  <button class="page-link" onclick="loadWalletData(<%= currentPage + 1 %>)">Next</button>
                </li>

              </ul>
            </nav>
          <% } %>

        </div>
      </div>

    </div>
  </div>

 <%- include("../../views/partials/user/footer") %>
  <!-- Razorpay Script -->
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
   
    document.addEventListener('DOMContentLoaded', function () {
      const searchInput = document.getElementById('searchInput');
      const filterType = document.getElementById('filterType');

      function LoadData(page = 1) {
        const search = searchInput ? searchInput.value : '';
        const filter = filterType ? filterType.value : 'all';
        window.location.href = `/wallet?search=${encodeURIComponent(search)}&filter=${filter}&page=${page}`;
      }

      
      window.loadWalletData = LoadData;

      if (searchInput) {
        searchInput.addEventListener('keydown', function (e) {
          if (e.key === 'Enter') {
            e.preventDefault();
            LoadData(1);
          }
        });
      }

      if (filterType) {
        filterType.addEventListener('change', function () {
          LoadData(1);
        });
      }

      
      window.clearSearch = function () {
        if (searchInput) searchInput.value = '';
        LoadData(1);
      };
    });



async function startWalletRecharge() {
  const amount = document.getElementById("amount").value;

  if (!amount || amount <= 0) {
    document.getElementById('amount-Error').innerText = 'Invalid Amount';
    return;
  }

  const res = await fetch("/wallet/addAmount", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ amount })
  });

  const data = await res.json();

  if (!data.success) {
    Swal.fire({
      icon: "error",
      title: "Error",
      text: data.message
    });
    return;
  }

  const options = {
    key: data.key,
    amount: data.amount,
    currency: "INR",
    name: "Zyra Wallet",
    description: "Wallet Recharge",
    order_id: data.orderId,
    handler: function (response) {
      fetch("/wallet/verify-payment", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          razorpay_order_id: response.razorpay_order_id,
          razorpay_payment_id: response.razorpay_payment_id,
          razorpay_signature: response.razorpay_signature,
          amount
        })
      })
      .then(res => res.json())
      .then(result => {
        Swal.fire({
          icon: result.success ? "success" : "error",
          title: result.success ? "Success!" : "Payment Failed",
          text: result.message
        }).then(() => {
          window.location.reload();
        });
      });
    },
    modal: {
      ondismiss: function () {
        // Handle user closing the popup
        fetch("/wallet/verify-payment", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            razorpay_order_id: null,
            razorpay_payment_id: null,
            razorpay_signature: null,
            amount
          })
        })
        .then(res => res.json())
        .then(result => {
          Swal.fire({
            icon: "error",
            title: "Payment Cancelled",
            text: result.message
          }).then(() => {
            window.location.reload();
          });
        });
      }
    },
    theme: { color: "#000000" }
  };

  const rzp = new Razorpay(options);

  rzp.on("payment.failed", function (response) {
    fetch("/wallet/verify-payment", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        razorpay_order_id: response.error.metadata.order_id,
        razorpay_payment_id: response.error.metadata.payment_id,
        razorpay_signature: null,
        amount
      })
    })
    .then(res => res.json())
    .then(result => {
      Swal.fire({
        icon: "error",
        title: "Payment Failed",
        text: result.message
      }).then(() => {
        window.location.reload();
      });
    });
  });

  rzp.open();
}

  </script>

</body>

</html>
