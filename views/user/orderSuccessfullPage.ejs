<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Zyra - Payment Success</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Lottie Animation Library -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.9.6/lottie.min.js"></script>

  <style>
    body { 
      background: #f8f5f4 !important;
      font-family: "Poppins", sans-serif;
      margin: 0;
      padding: 0;
    }

    /* MAIN WRAPPER TO PUSH FOOTER DOWN */
    .page-wrapper {
      min-height: 85vh;     /* Pushes footer off screen */
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .success-card {
      background: #fff;
      padding: 35px;
      border-radius: 14px;
      box-shadow: 0 3px 12px rgba(0,0,0,0.08);
      text-align: center;
    }

    .heading {
      font-weight: 700;
      font-size: 1.8rem;
      margin-bottom: 5px;
    }

    .sub-text { 
      color: #6c757d; 
    }

    .btn-black {
      background: black;
      color: white;
      padding: 12px 25px;
      border-radius: 6px;
      text-decoration: none;
      margin-right: 10px;
      font-weight: 600;
    }

    .btn-black:hover {
      background: #333;
      color: white;
    }

    .btn-outline {
      border: 1px solid black;
      color: black;
      padding: 12px 25px;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 600;
    }

    .btn-outline:hover {
      background: black;
      color: white;
    }

    #successAnimation {
      width: 220px;
      margin: auto;
    }
  </style>
</head>

<body>

  <%- include("../../views/partials/user/header") %>

  <!-- MAIN WRAPPER -->
  <div class="page-wrapper">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <div class="success-card">

            <!-- Animation -->
            <div id="successAnimation"></div>

            <h2 class="heading">Order Placed!</h2>
            <p class="sub-text">Thank you for your order. Your payment has been processed.</p>

            <div class="mt-4">
              <a href="/profile/orders" class="btn-black">View Orders</a>
              <a href="/shop" class="btn-outline">Continue Shopping</a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include("../../views/partials/user/footer") %>

<script>
  // Lottie JSON animation
  const animation = lottie.loadAnimation({
    container: document.getElementById('successAnimation'),
    renderer: 'svg',
    loop: false,
    autoplay: true,
    path: 'https://assets2.lottiefiles.com/packages/lf20_jbrw3hcz.json' 
  });
</script>

</body>
</html>



