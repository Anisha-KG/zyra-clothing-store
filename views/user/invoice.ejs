<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Tax Invoice</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body {
      background: white;
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    .invoice-box {
      border: 1px solid #ddd;
      padding: 20px;
      background: #fff;
    }
    .title {
      font-size: 22px;
      font-weight: 600;
      text-align: center;
      margin-bottom: 25px;
      text-transform: uppercase;
    }
    .section-title {
      font-weight: 600;
      margin-top: 20px;
      font-size: 14px;
    }
    table th, table td {
      font-size: 13px;
      vertical-align: middle !important;
    }
    .summary-table td {
      font-size: 14px;
      padding: 6px 10px;
    }
  </style>
</head>
<body>

<div class="invoice-box">

  <!-- TITLE -->
  <div class="title">TAX INVOICE</div>

  <!-- INVOICE INFO -->
  <p class="section-title">Invoice Info</p>
  <div class="row mb-3">
    <div class="col-6"><strong>Invoice Number:</strong> <%= order.orderId %></div>
    <div class="col-6"><strong>Invoice Date:</strong> <%= order.createdAt %></div>
  </div>

  <!-- SELLER DETAILS -->
  <p class="section-title">Seller Details</p>
  <div>
    <strong>ZYRA</strong><br />
    GSTIN: 32AACDE1234F2Z5<br />
    Address: 123 Vijay Nagar, Thrissur, 680300
  </div>

  <!-- BUYER DETAILS -->
  <p class="section-title">Buyer Details</p>
  <div>
    <strong><%= order.userId.name %></strong><br />
    <%= order.address %><br />
    Phone: <%= order.userId.phone %>
  </div>

  <!-- PRODUCT DETAILS TABLE -->
  <p class="section-title">Product Details</p>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Sl No.</th>
        <th>Product</th>
        <th>Qty</th>
        <th>Rate (₹)</th>
        <th>Amount (₹)</th>
        <th>GST %</th>
        <th>GST Amt (₹)</th>
        <th>Total (₹)</th>
      </tr>
    </thead>
    <tbody>
      <% order.orderedItems.forEach((item, index) => { 
          const gstAmount = Math.round(item.itemsTotal * 0.18);
          const totalWithGST = item.itemsTotal + gstAmount;
      %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= item.productName %></td>
          <td><%= item.quantity %></td>
          <td><%= item.finalPrice %></td>
          <td><%= item.itemsTotal %></td>
          <td>18%</td>
          <td><%= gstAmount %></td>
          <td><%= totalWithGST %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- SUMMARY -->
  <p class="section-title">Total Summary</p>

  

  <table class="table table-bordered summary-table">
    <tr>
      <td><strong>Total Amount</strong></td>
      <td class="text-end">₹<%= order.subTotal %></td>
    </tr>
    <tr>
      <td><strong>Total GST (<%= order.taxRate%>)</strong></td>
      <td class="text-end">₹<%= order.taxAmount %></td>
    </tr>
    <tr>
      <td><strong>Grand Total</strong></td>
      <td class="text-end">₹<%= order.totalPayable %></td>
    </tr>
  </table>

  <div class="text-end mt-4">
    <small>Authorized Signatory</small>
  </div>

</div>

</body>
</html>
