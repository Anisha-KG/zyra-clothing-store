<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Zyra - Payment Failed</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Lottie Animation Library -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.9.6/lottie.min.js"></script>

  <style>
    body { 
      background: #f8f5f4 !important;
      font-family: "Poppins", sans-serif;
      margin: 0;
      padding: 0;
    }

    .page-wrapper {
      min-height: 85vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .failure-card {
      background: #fff;
      padding: 35px;
      border-radius: 14px;
      box-shadow: 0 3px 12px rgba(0,0,0,0.08);
      text-align: center;
    }

    .heading {
      font-weight: 700;
      font-size: 1.8rem;
      margin-top: 10px;
      color: #dc3545;
    }

    .sub-text {
      color: #6c757d;
      font-size: 16px;
    }

    .btn-black {
      background: black;
      color: white;
      padding: 12px 25px;
      border-radius: 6px;
      text-decoration: none;
      margin-right: 10px;
      font-weight: 600;
    }

    .btn-black:hover {
      background: #333;
      color: white;
    }

    .btn-outline {
      border: 1px solid black;
      color: black;
      padding: 12px 25px;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 600;
    }

    .btn-outline:hover {
      background: black;
      color: white;
    }

    #failureAnimation {
      width: 220px;
      margin: auto;
    }
  </style>
</head>

<body>

  <%- include("../../views/partials/user/header") %>

  <div class="page-wrapper">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <div class="failure-card">

            <!-- Animation -->
            <div id="failureAnimation"></div>

            <h2 class="heading">Payment Failed</h2>

            <% if (typeof message !== "undefined" && message) { %>
              <p class="sub-text"><%= message %></p>
            <% } else { %>
              <p class="sub-text">Your payment for order <strong><%= orderId %></strong> was unsuccessful.</p>
            <% } %>

            <p class="sub-text">Please try again or contact support.</p>

            <div class="mt-4">
              <a href="/getCart" class="btn-black">Return to Cart</a>
              <a href="/shop" class="btn-outline">Continue Shopping</a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include("../../views/partials/user/footer") %>

<script>
  const animation = lottie.loadAnimation({
    container: document.getElementById('failureAnimation'),
    renderer: 'svg',
    loop: false,
    autoplay: true,
    path: "https://lottie.host/8a9a98d2-d72f-46fd-a1c4-78b56d3cb5cb/Q6eCQPoUOF.json"  // Red cross failure animation
  });
</script>

</body>
</html>
