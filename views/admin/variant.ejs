    hasError = true;
  } else document.getElementById('quantityError').textContent = '';


 // Validate at least one image is provided
let hasImage = false;
for (let i = 1; i <= 4; i++) {
  const cropped = document.getElementById(`croppedImage${i}`).value;
  const fileInput = document.getElementById(`image${i}`).files[0];
  if (cropped || fileInput) {
    hasImage = true;
    break;
  }
}

if (!hasImage) {
  // Show error on the first image input (or any)
  document.getElementById('image1-error').textContent = 'Please add at least one image';
  hasError = true;
