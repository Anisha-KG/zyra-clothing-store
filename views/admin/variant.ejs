    const cropped = document.getElementById(`editCroppedImage${i}`).value;
    const fileInput = document.getElementById(`editImage${i}`).files[0];

    if (cropped) {
      // Convert cropped base64 to Blob
      const blob = await fetch(cropped).then(res => res.blob());
      formData.delete(`image${i}`); // remove original file if any
      formData.append(`image${i}`, blob, `cropped${i}.jpg`);
    } else if (fileInput) {
      // Only new file, no crop
      formData.append(`image${i}`, fileInput);
    } else {
      // No change: remove from FormData to avoid sending old images
      formData.delete(`image${i}`);
    }
  }

  try {
    const response = await fetch('/admin/editVariant', {
      method: 'PATCH', // your server must handle PATCH
      body: formData
    });

