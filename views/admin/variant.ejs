  <script>
    const croppers = {}; // Cropper instances
function previewImage(event, index, isEdit = false) {
  const input = event.target;
  const previewId = isEdit ? `editPreview${index}` : `preview${index}`;
  const croppedInputId = isEdit ? `editCroppedImage${index}` : `croppedImage${index}`;
  const cropBtnId = isEdit ? `editCropBtn${index}` : `cropBtn${index}`;
  const errorId = isEdit ? `editImage${index}-error` : `image${index}-error`;

  const previewImage = document.getElementById(previewId);
  const previewContainer = previewImage.parentElement;
  const cropBtn = document.getElementById(cropBtnId);
  const errorDiv = document.getElementById(errorId);

  previewContainer.style.display = 'none';
  cropBtn.style.display = 'none';
  errorDiv.textContent = '';
  document.getElementById(croppedInputId).value = '';

  const key = isEdit ? `edit${index}` : index;
  if (croppers[key]) {
    croppers[key].destroy();
    delete croppers[key];
  }

  if (input.files && input.files[0]) {
    const file = input.files[0];
    const validTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/bmp', 'image/webp'];
    if (!validTypes.includes(file.type)) {
      errorDiv.textContent = 'Invalid image type';
      input.value = '';
      return;
    }
    if (file.size > 5 * 1024 * 1024) {
      errorDiv.textContent = 'Image size must be <5MB';
      input.value = '';
      return;
    }

    const reader = new FileReader();
    reader.onload = e => {
      previewImage.src = e.target.result;
      previewContainer.style.display = 'block';
      cropBtn.style.display = 'inline-block';

      croppers[key] = new Cropper(previewImage, {
        aspectRatio: NaN,      // free ratio
    viewMode: 1,           // restrict crop box within image
    autoCropArea: 1,       // cover the whole image initially
    background: false,
    responsive: true,
    zoomable: true,
    movable: true
      });
    };
    reader.readAsDataURL(file);
  }
}

function cropImage(index, isEdit = false) {
  const key = isEdit ? `edit${index}` : index;
  if (!croppers[key]) return;

  const previewId = isEdit ? `editPreview${index}` : `preview${index}`;
  const croppedInputId = isEdit ? `editCroppedImage${index}` : `croppedImage${index}`;
  const cropBtnId = isEdit ? `editCropBtn${index}` : `cropBtn${index}`;

  const croppedDataURL = croppers[key]
    .getCroppedCanvas({ width: 500, height: 500 })
    .toDataURL('image/jpeg');

  document.getElementById(previewId).src = croppedDataURL;
  document.getElementById(croppedInputId).value = croppedDataURL;

  // Destroy cropper instance after cropping
  croppers[key].destroy();
  delete croppers[key];

  document.getElementById(cropBtnId).style.display = 'none';
}

    // Reset modal
    document.getElementById("addVariantModal").addEventListener("hidden.bs.modal", () => {
      for (let i = 1; i <= 4; i++) {
        if (croppers[i]) croppers[i].destroy();
        document.getElementById(`preview${i}`).src = "#";
        document.getElementById(`croppedImage${i}`).value = "";
        document.getElementById(`image${i}`).value = "";
        document.getElementById(`image${i}-error`).textContent = "";
        document.getElementById(`preview${i}`).parentElement.style.display = 'none';
        document.getElementById(`cropBtn${i}`).style.display = 'none';
      }
    });

    function setproductId(productId) {
      document.getElementById('productId').value = productId
    }
    function setEditmodal(variantId) {
  const variant = <%- JSON.stringify(variants) %>.find(v => v._id === variantId);
  if (!variant) return;

  document.getElementById('editVariantId').value = variant._id;
  document.getElementById('editVariantColor').value = variant.color || '';
  document.getElementById('editVariantSize').value = variant.size || '';
  document.getElementById('editVariantQuantity').value = variant.quantity || '';

  const editModalEl = document.getElementById('editVariantModal');
  const modal = new bootstrap.Modal(editModalEl);

  // Wait until modal is fully shown
  editModalEl.addEventListener('shown.bs.modal', function handler() {
    for (let i = 1; i <= 4; i++) {
      if (croppers[`edit${i}`]) {
        croppers[`edit${i}`].destroy();
        delete croppers[`edit${i}`];
      }

      const preview = document.getElementById(`editPreview${i}`);
      const croppedInput = document.getElementById(`editCroppedImage${i}`);
      const cropBtn = document.getElementById(`editCropBtn${i}`);
      const previewContainer = preview.closest('.preview-container');

      if (variant.images && variant.images[i - 1]) {
        preview.src = `/uploads/variants/${variant.images[i - 1]}`;
        croppedInput.value = '';
        previewContainer.style.display = 'block';
        cropBtn.style.display = 'inline-block';

        // Initialize Cropper after modal is visible
        croppers[`edit${i}`] = new Cropper(preview, {
          aspectRatio: NaN,      // free ratio
    viewMode: 1,           // restrict crop box within image
    autoCropArea: 1,       // cover the whole image initially
    background: false,
    responsive: true,
    zoomable: true,
    movable: true
        });
      } else {
        preview.src = '#';
        croppedInput.value = '';
        previewContainer.style.display = 'none';
        cropBtn.style.display = 'none';
      }
    }
    editModalEl.removeEventListener('shown.bs.modal', handler);
  });

  modal.show();
}



  </script>

