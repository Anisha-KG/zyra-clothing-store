  for (let i = 1; i <= 4; i++) {
    document.getElementById(`image${i}-error`).textContent = '';
  }
}

if(hasError) return


  try {
    const response = await fetch('/admin/addVariant', {
      method: 'POST',
      body: formData
    });

    const result = await response.json();

    if (result.success) {
