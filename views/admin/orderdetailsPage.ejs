<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin | Orders</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            background: #f5f6f8;
            font-family: "Poppins", sans-serif;
        }

        /* ‚ú® PAGE SHRINK FIX */
        main {
            max-width: 1100px !important;
            margin: auto !important;
        }
        .container-fixed {
            max-width: 1100px;
            margin: auto;
        }

        .order-title {
            font-weight: 700;
            color: #3e2723;
        }

        .card-custom {
            padding: 20px;
            border-radius: 14px;
            background: #fff;
            border: none;
            transition: .2s ease-in-out;
            box-shadow: 0 6px 16px rgba(0,0,0,0.08);
        }
        .card-custom:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 18px rgba(0,0,0,0.12);
        }

        .table-head th {
            background-color: #8d6e63 !important;
            color: #fff !important;
        }

        .product-img {
            width: 120px;
            height: 120px;
            border-radius: 10px;
            object-fit: cover;
            box-shadow: 0px 4px 10px rgba(0,0,0,0.15);
        }

        .return-box {
            background-color: #fff7e6;
            border-left: 4px solid #ff9800;
            padding: 14px;
            border-radius: 10px;
        }

        .section-title {
            font-weight: 700;
            color: #4e342e;
            margin-bottom: 10px;
        }

        .status-select {
            border-radius: 8px;
            box-shadow: none;
            padding: 6px 12px;
        }

        input[type="date"] {
            border-radius: 8px !important;
            padding: 6px 12px !important;
        }

        .back-btn {
            font-size: 15px;
            padding: 8px 12px;
            border-radius: 6px;
            background: transparent;
            color: #5d4037;
            transition: .2s;
        }
        .back-btn:hover {
            color: #3e2723;
            text-decoration: underline;
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>

    <%- include("../../views/partials/admin/header") %>

    <!-- ‚ú® PAGE SHRINK FIX WRAPPER -->
    <main class="col-12 px-3 pt-3 container-fixed">

       <div class="px-4 py-4">

            <a href="/admin/orders" class="back-btn d-inline-block mb-3">
                ‚Üê Back to All Orders
            </a>

            <h2 class="order-title">Order #<%= order.orderId %></h2>

            <div class="row g-4 mt-2">

                <div class="col-md-4">
                    <div class="card-custom">
                        <h6 class="fw-bold mb-3 text-secondary">Customer Details</h6>
                        <p class="mb-1 fs-5"><%= order.userId?.name %></p>
                        <p class="text-muted"><%= order.userId?.email %></p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card-custom">
                        <h6 class="fw-bold mb-3 text-secondary">Shipping Address</h6>
                        <% let addressParts = order.address.split(","); %>
                        <% addressParts.forEach(line => { %>
                            <p class="mb-1"><%= line.trim() %></p>
                        <% }) %>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card-custom">
                        <h6 class="fw-bold mb-3 text-secondary">Order Summary</h6>

                        <p class="mb-1">Payment Status:
                            <span class="fw-bold text-danger"><%= order.paymentStatus.toUpperCase() %></span>
                        </p>

                        <p class="mb-1">Payment Method:
                            <span class="fw-bold"><%= order.paymentMethod.toUpperCase() %></span>
                        </p>

                        <p class="mb-1">Coupon Applied:
                            <span class="fw-bold text-success">‚Çπ<%= order.discount %></span>
                        </p>

                        <hr>

                        <h6 class="fw-bold">Total Amount: ‚Çπ<%= order.totalPayable %></h6>
                    </div>
                </div>

            </div>

            <h4 class="section-title mt-5">
                <i class="bi bi-list text-primary"></i> Order Details
            </h4>

            <% order.orderedItems.forEach(item => { %>
                <div class="card-custom mt-3">

                    <div class="row align-items-center g-4">

                        <div class="col-md-2 text-center">
                            <img src="/uploads/variants/<%= item.variant?.images?.[0] || '/images/no-img.png' %>"
                                class="product-img">
                        </div>

                        <div class="col-md-7">
                            <h5 class="fw-bold mb-1"><%= item.productName %></h5>

                            <p class="mb-1 text-muted">Qty: <%= item.quantity %> ‚Ä¢ Price: ‚Çπ<%= item.finalPrice %></p>
                            <p class="mb-1 text-muted">Color: <%= item.color %> ‚Ä¢ Size: <%= item.size %></p>

                            <div class="mt-3">
                                <span class="fw-bold">Status</span>

                                <select class="form-select mt-1 status-select"
                                        id="status-<%= item._id %>"
                                        data-current="<%= item.status %>"
                                        onchange="updateStatus('<%= item._id%>','<%= order.orderId%>')">
                                    <option>Processing</option>
                                    <option>Packed</option>
                                    <option>Shipped</option>
                                    <option>Delivered</option>
                                    <option>Cancelled</option>
                                    <option>Returned</option>
                                </select>
                            </div>

                            <% if(item.status === 'Return Requested') { %>
                                <div class="return-box mt-3">
                                    <p class="mb-2"><strong>Return Reason:</strong> <%= item.returnRequest.reason %></p>
                                    <button class="btn btn-success btn-sm me-2"
                                            onclick="handleReturn('<%= item._id %>', '<%= order.orderId %>', 'accept')">
                                        Accept
                                    </button>
                                    <button class="btn btn-danger btn-sm"
                                            onclick="handleReturn('<%= item._id %>', '<%= order.orderId %>', 'reject')">
                                        Reject
                                    </button>
                                </div>
                            <% } %>
<% if(item.status === 'Returned') { %>
    <div class="return-box mt-3" id="return-box-<%= item._id %>">
        <p class="mb-2"><strong>Do you want to increment the stock?</strong></p>

        <button class="btn btn-success btn-sm me-2"
                onclick="incrementStock('<%= item._id %>','<%= order.orderId %>')">
            Yes
        </button>

        <button class="btn btn-secondary btn-sm"
                onclick="skipStockUpdate('<%= item._id %>')">
            No
        </button>
    </div>
<% } %>



                            
                        </div>

                        <div class="col-md-3">
                            <span class="fw-bold">Expected Delivery</span>
                            <input 
    type="date" 
    class="form-control mt-2"
    value="<%= item.expectedDelivery ? item.expectedDelivery.toISOString().slice(0,10) : '' %>"
    onchange="updateExpectedDate('<%= item._id %>', '<%= order.orderId %>', this.value)"
    <%= ['Delivered', 'Cancelled', 'Returned'].includes(item.status) ? 'disabled' : '' %>
>
                        </div>

                    </div>

                </div>
            <% }) %>

        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


<script>
(function () {

    const orderFlow = ["Processing", "Packed", "Shipped", "Delivered", "Cancelled", "Returned"];

    document.querySelectorAll('.status-select').forEach(select => {
        
        const rawCurrent = select.dataset.current || "";
        const current = String(rawCurrent).trim();

        // üî• Force UI selection when status is Cancel Requested / Return Requested
        let displayStatus = current;
        if (current === "Cancel Requested" || current === "Return Requested") {
            displayStatus = "Delivered"; // UI should show Delivered
        }

        // Get correct index based on display status
        const currentIndex = orderFlow.findIndex(
            s => s.trim().toLowerCase() === displayStatus.toLowerCase()
        );

        const idx = currentIndex >= 0 ? currentIndex : 0;
        if (currentIndex < 0) {
            console.warn("Unrecognized status:", rawCurrent, "for select id:", select.id);
        }

        // Set selected option
        select.selectedIndex = idx;

        // Disable all previous statuses
        Array.from(select.options).forEach((opt, i) => {
            opt.disabled = i < idx;
        });

        // Prevent backward movement
        select.addEventListener('change', function () {
            const newIndex = this.selectedIndex;
            if (newIndex < idx) {
                this.selectedIndex = idx;
                alert("Cannot move status backward. You can only update to the same or a later status.");
            }
        });
    });
})();

async function updateStatus(itemId, orderId) {
    try{
        const selectedStatus = document.getElementById(`status-${itemId}`).value 

        const response = await fetch("/admin/updateOrderStatus", {
            method: "PATCH",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                itemId: itemId,
                status: selectedStatus,
                orderId
            })
        });

        const result = await response.json();

        if (result.success) {
            Swal.fire({
                icon: 'success',
                title: 'Updated!',
                text: result.message,
                confirmButtonColor: '#198754'
            }).then(() => window.location.reload());
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Failed',
                text: result.message,
                confirmButtonColor: '#dc3545'
            });
        }
    } catch(error) {
        Swal.fire({
            icon: 'error',
            title: 'Server Error',
            text: 'Something went wrong',
            confirmButtonColor: '#dc3545'
        });
    }
}

async function handleReturn(itemId, orderId, action) {
    try {
        const response = await fetch('/admin/orders/handleReturnRequest', {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ itemId, orderId, action })
        });
        const result = await response.json();

        if(result.success) {
            Swal.fire({
                icon: 'success',
                title: action === 'accept' ? 'Return Accepted' : 'Return Rejected',
                text: result.message,
                confirmButtonColor: '#198754'
            }).then(() => window.location.reload());
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Failed',
                text: result.message,
                confirmButtonColor: '#dc3545'
            });
        }
    } catch (error) {
        Swal.fire({
            icon: 'error',
            title: 'Server Error',
            text: 'Something went wrong',
            confirmButtonColor: '#dc3545'
        });
    }
}

async function updateExpectedDate(itemId, orderId, selectedDate) {
    try {
        const response = await fetch('/admin/orders/updateExpectedDate', {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ itemId, orderId, selectedDate })
        });

        const result = await response.json();

        if (result.success) {
            Swal.fire({
                icon: 'success',
                title: 'Updated!',
                text: result.message,
                confirmButtonColor: '#198754'
            }).then(() => window.location.reload());
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Failed',
                text: result.message,
                confirmButtonColor: '#dc3545'
            });
        }
    } catch (error) {
        Swal.fire({
            icon: 'error',
            title: 'Server Error',
            text: 'Something went wrong',
            confirmButtonColor: '#dc3545'
        });
        console.error("FETCH ERROR:", error);
    }
}
function incrementStock(itemId, orderId) {

    fetch(`/admin/orders/increment-stock`, {
        method: "PATCH",
        headers:{ 'Content-Type': 'application/json' },
        body: JSON.stringify({ itemId, orderId })
    })
    .then(res => res.json())
    .then(data => {
        if (data.success) {

            // üî• Remove the "increment stock section"
            const box = document.getElementById(`return-box-${itemId}`);
            if (box) box.remove();

            Swal.fire("Success!", "Stock incremented successfully!", "success");
        }
    });
}

function skipStockUpdate(itemId) {

    // üî• Remove section instantly
    const box = document.getElementById(`return-box-${itemId}`);
    if (box) box.remove();

    Swal.fire("Skipped", "Stock was not updated.", "info");
}
</script>
</html>
