<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin | Offer Management</title>

  <!-- Bootstrap 5.3 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body { background-color: #f8f9fa; }
    .sidebar { width: 250px; min-height: 100vh; background: #fff; border-right: 1px solid #dee2e6; }
    .content-wrapper { padding: 2rem; width: 100%; }
    .table thead { background-color: #e9ecef; }
  </style>
</head>
<body>

<div class="d-flex">
  <aside class="sidebar d-none d-md-block"></aside>

  <main class="content-wrapper">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">Admin</li>
        <li class="breadcrumb-item active">Offers</li>
      </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h4 class="fw-bold">Offer Management</h4>
      <button class="btn btn-primary" onclick="openAddModal()">
        <i class="bi bi-plus-lg"></i> Add Offer
      </button>
    </div>

    <div class="card shadow-sm">
      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead>
            <tr>
              <th>No</th>
              <th>Offer Name</th>
              <th>Discount</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>SET20</td>
              <td>20%</td>
              <td>30 Nov 2025</td>
              <td>31 Dec 2025</td>
              <td>
                <input class="form-check-input" type="checkbox" checked>
              </td>
              <td>
                <button class="btn btn-sm btn-primary" onclick="openEditModal({
                  name:'SET20',
                  discount:20,
                  startDate:'2025-11-30',
                  endDate:'2025-12-31',
                  status:true
                })">Edit</button>
                <button class="btn btn-sm btn-danger">Delete</button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </main>
</div>

<!-- Modal -->
<div class="modal fade" id="offerModal" tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="modalTitle">Add New Offer</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <form id="offerForm">
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Offer Name *</label>
              <input type="text" class="form-control" id="offerName" required>
            </div>

            <div class="col-md-6">
              <label class="form-label">Apply to Categories (optional)</label>
              <input type="text" class="form-control" id="categories">
            </div>

            <div class="col-md-6">
              <label class="form-label">Discount Percentage *</label>
              <input type="number" class="form-control" id="discount" required>
            </div>

            <div class="col-md-6">
              <label class="form-label">Apply to Products (optional)</label>
              <input type="text" class="form-control" id="products">
            </div>

            <div class="col-md-6">
              <label class="form-label">Valid From *</label>
              <input type="date" class="form-control" id="startDate" required>
            </div>

            <div class="col-md-6">
              <label class="form-label">Apply to Brands (optional)</label>
              <input type="text" class="form-control" id="brands">
            </div>

            <div class="col-md-6">
              <label class="form-label">Valid To *</label>
              <input type="date" class="form-control" id="endDate" required>
            </div>

            <div class="col-12">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="status" checked>
                <label class="form-check-label">Active</label>
              </div>
            </div>
          </div>
        </form>
      </div>

      <div class="modal-footer">
        <button type="reset" class="btn btn-secondary" form="offerForm">Reset</button>
        <button type="submit" class="btn btn-dark" form="offerForm">Save Offer</button>
      </div>

    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  const modal = new bootstrap.Modal(document.getElementById('offerModal'))

  function openAddModal() {
    document.getElementById('modalTitle').innerText = 'Add New Offer'
    document.getElementById('offerForm').reset()
    modal.show()
  }

  function openEditModal(offer) {
    document.getElementById('modalTitle').innerText = 'Edit Offer'

    offerName.value = offer.name
    discount.value = offer.discount
    startDate.value = offer.startDate
    endDate.value = offer.endDate
    status.checked = offer.status

    modal.show()
  }

  document.getElementById('offerForm').addEventListener('submit', function (e) {
    e.preventDefault()

    const data = {
      name: offerName.value,
      discount: discount.value,
      startDate: startDate.value,
      endDate: endDate.value,
      status: status.checked
    }

    console.log('Submitted Offer:', data)
    modal.hide()
  })
</script>

</body>
</html>
