<%- include("../../views/partials/admin/header")%>

    <!-- Main content wrapper -->
    <div class="flex-grow-1">
      <!-- Header -->
      <header class="header-bar">
        <div style="width: 40px;"></div> <!-- spacer for alignment -->
        <h1 class="brand-title mb-0">ZYRA</h1>
        <div class="dropdown">
          <a class="d-flex align-items-center text-decoration-none dropdown-toggle" href="#" role="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person-circle fs-3"></i>
            <span class="ms-2">Admin</span>
          </a>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
            <li><a class="dropdown-item" href="/admin/adminlogout">Logout</a></li>
          </ul>
        </div>
      </header>

      <!-- Main Content -->
      <main class="p-3">
        <!-- Stats Cards -->
        <div class="row g-3 mb-4 mt-3">
          <div class="col-sm-6 col-md-3">
            <div class="card p-3 text-center">
              <i class="bi bi-people fs-2 text-success"></i>
              <h5 class="mt-2">Total Customers</h5>
              <p class="fs-4 fw-bold">5,423</p>
              <span class="text-success">↑ 19% this month</span>
            </div>
          </div>
          <div class="col-sm-6 col-md-3">
            <div class="card p-3 text-center">
              <i class="bi bi-bag-check fs-2 text-primary"></i>
              <h5 class="mt-2">Total Orders</h5>
              <p class="fs-4 fw-bold">1,893</p>
            </div>
          </div>
          <div class="col-sm-6 col-md-3">
            <div class="card p-3 text-center">
              <i class="bi bi-currency-rupee fs-2 text-warning"></i>
              <h5 class="mt-2">Total Sales</h5>
              <p class="fs-4 fw-bold">₹65,805</p>
            </div>
          </div>
          <div class="col-sm-6 col-md-3">
            <div class="card p-3 text-center">
              <i class="bi bi-clock-history fs-2 text-danger"></i>
              <h5 class="mt-2">Total Pending</h5>
              <p class="fs-4 fw-bold">189</p>
            </div>
          </div>
        </div>

        <!-- Sales Details -->
        <div class="row g-3">
          <div class="col-md-4">
            <div class="card p-3">
              <h6>Sales Progress</h6>
              <div class="progress my-3" style="height: 20px;">
                <div class="progress-bar bg-success" role="progressbar" style="width: 75%">75.55%</div>
              </div>
              <p>You secured an extra ₹29,805 today, it's higher than yesterday.</p>
              <div class="d-flex justify-content-between">
                <span>Target ₹30k</span>
                <span>Achieved ₹28k</span>
              </div>
            </div>
          </div>
          <div class="col-md-8">
            <div class="card p-3">
              <div class="d-flex justify-content-between">
                <h6>Activity</h6>
                <select class="form-select form-select-sm w-auto">
                  <option>Month</option>
                  <option>Week</option>
                </select>
              </div>
              <canvas id="salesChart" height="120"></canvas>
            </div>
          </div>
        </div>

        <%- include("../../views/partials/admin/footer")%>