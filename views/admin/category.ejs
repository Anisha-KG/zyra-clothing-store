
    <%- include("../../views/partials/admin/header")%>

  

  <!-- Main Content -->
  <main class="col-12 col-md-10 px-3 pt-3">

    <!-- Page Header & Search -->
    <div class="d-flex justify-content-between align-items-center my-3">
      <h4><strong>Categories</strong></h4>
      <form class="d-flex gap-2">
        <input type="text" class="form-control form-control-sm" placeholder="Search by category name">
        <button class="btn btn-dark btn-sm" type="submit">Search</button>
        <a href="#" class="btn btn-outline-secondary btn-sm">Clear</a>
      </form>
    </div>

    <!-- Categories Table -->
    <div class="table-responsive bg-white p-3 rounded shadow-sm">
      <table class="table align-middle table-hover">
        <thead class="table-head">
          <tr>
            <th>Sl No</th>
            <th>Category Name</th>
            <th>Image</th>
            <th>Description</th>
            <th>Status</th>
            <th>Offer</th>
            <th>Valid Until</th>
            <th>Add Offer</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- Example Data -->
          <tr>
            <td>1</td>
            <td>Beverages</td>
            <td><img src="https://via.placeholder.com/40" class="category-img" alt="Beverages"></td>
            <td>Soft drinks, juices, and water</td>
            <td><span class="status-active">Listed</span></td>
            <td>10% Off</td>
            <td>2025-10-15</td>
            <td><button class="btn btn-sm btn-outline-primary">Add Offer</button></td>
            <td class="action-icons">
              <a href="#" title="Edit"><i class="fas fa-edit text-primary"></i></a>
              <a href="#" title="Delete"><i class="fas fa-trash text-danger"></i></a>
            </td>
          </tr>
          <tr>
            <td>2</td>
            <td>Snacks</td>
            <td><img src="https://via.placeholder.com/40" class="category-img" alt="Snacks"></td>
            <td>Chips, biscuits, and fast food</td>
            <td><span class="status-blocked">Unlisted</span></td>
            <td>—</td>
            <td>—</td>
            <td><button class="btn btn-sm btn-outline-primary">Add Offer</button></td>
            <td class="action-icons">
              <a href="#" title="Edit"><i class="fas fa-edit text-primary"></i></a>
              <a href="#" title="Delete"><i class="fas fa-trash text-danger"></i></a>
            </td>
          </tr>
        </tbody>
      </table>

      <!-- Pagination -->
      <div class="d-flex justify-content-center mt-4">
        <nav>
          <ul class="pagination pagination-sm mb-0">
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="text-center py-3 border-top bg-white mt-4">
    <p class="mb-0">&copy; 2025 ZYRA Admin Panel</p>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

